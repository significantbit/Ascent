<%= content_for :title, "#{@object.name} - Nodes - Admin" %>
<%= content_for :header_title, "Edit- #{@object.name}" %>

<% content_for :header_right do %>
  <div class="center-button">
    <%= link_to t('ascent.admin.node.save'), ascent_admin.node_path(@object), class: 'btn btn-success', method: :put %>
  </div>
<% end %>
<div class="admin-well">
  <h2><%= @object.name %></h2>

  <%= ascent_form_for @object, url: ascent_admin.node_path(@object), html: { method: "put", multipart: true, class: "form-horizontal denser" } do |form| %>
    <%= form.generate :update %>
  <% end %>
</div>
